{
  "name": "toon-parser",
  "version": "2.1.0",
  "description": "Safe JSON <-> TOON encoder/decoder with strict validation.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:js": "tsc -p tsconfig.json",
    "build:cjs": "esbuild src/index.ts src/xml.ts --format=cjs --outdir=dist/cjs --platform=node && node ./scripts/build-copy-cjs-output.js",
    "build": "npm run typecheck && npm run build:types && npm run build:js && npm run build:cjs",
    "clean": "rimraf dist",
    "clean:node": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "json",
    "toon",
    "parser",
    "encoder",
    "decoder",
    "secure"
  ],
  "author": "Branislav Lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/BranLang/toon-parser"
  },
  "bugs": {
    "url": "https://github.com/BranLang/toon-parser/issues"
  },
  "homepage": "https://github.com/BranLang/toon-parser#readme",
  "license": "MIT",
  "sideEffects": false,
  "devDependencies": {
    "fast-check": "^4.3.0",
    "rimraf": "^6.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.2",
    "node-html-parser": "^7.0.1"
  }
}